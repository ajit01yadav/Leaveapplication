@model LoginEntity
     @{ 
         //ViewBag.Title = "Login :: " + System.Configuration.ConfigurationManager.AppSettings["SiteName"];
         Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/PluginCss")
    @Scripts.Render("~/bundles/modernizr")
    @*<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.3.0/css/font-awesome.min.css" />*@
    <script type="text/javascript" src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
</head>
<body style="margin-top: 150px;">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="login-panel panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">
                                Please Sign In
                            </h3>
                        </div>
                        <div class="panel-body">
                            <div>
                                <div class="row">
                                    <div class="form-horizontal" role="form">
                                        <div class="col-sm-12">
                                            @Html.ValidationSummary(false, "The following error occurred:", new { @Id = "validationSummary", @class = "alert alert-danger alert-dismissable" })
                                        </div>
                                    </div>
                                </div>
                                @if (@ViewBag.Message != null)
                                {
                                    <div class="alert alert-danger alert-dismissable" role="alert">
                                        @ViewBag.Message
                                    </div>
                                }
                            </div>
                            <fieldset>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.WindowsUsername, new { @class = "form-control" })
                                </div>
                                @*<div class="form-group">
                                    @Html.PasswordFor(model => Model.Password, new { @class = "form-control", @placeholder = "Password" })
                                </div>*@
                                <input name="btnSubmit" value="Sign In" id="btnSubmit" class="@Validations.ButtonCss.btnLoginBlock" type="submit">
                                <br />
                                @*<div class="form-group text-center">
                                    <a href="@Url.Action("ForgotPassword","Account")">Forgot Password?</a>
                                </div*@
                            </fieldset>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    @Scripts.Render("~/Validation")
    @Scripts.Render("~/PluginJS")
</body>
</html>