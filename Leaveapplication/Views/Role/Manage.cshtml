@model List<RoleEntity>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-xs-12 page-header">
        <div class="row">
            <div id="ModuleHead" class="col-xs-6">
                <h1>
                    <i class="fa fa-user-secret fa-fw"></i>&nbsp;Manage Roles
                </h1>
            </div>
            <div class="col-xs-6 icon-menu-wrapper">
                <div class="icon-menu">
                    <a href="@Url.Action("Index", "Role")" title="Add New Role" data-placement="bottom" id="btnAddCompany"><span aria-hidden="true" class="glyphicon glyphicon-plus"></span></a>
                </div>
            </div>
        </div>
    </div>
</div>

@if (ViewBag.Message != null && ViewBag.Message != "")
{
    <div id="msgDisplay" class="@ViewBag.Class">
        <button data-dismiss="alert" class="close" type="button">
            <i class="ace-icon fa fa-times"></i>
        </button>
        <label id="lblMessage">@ViewBag.Message</label>
    </div>
}
@if (@Model.Count > 0)
{
    <div class="row">
        <div class="col-xs-12">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover table-responsive">
                    <tr>
                        <th>
                            Role Name
                        </th>
                        <th>
                            Status
                        </th>
                      
                        
                            <th class="text-center">Action</th>
                        
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.RoleName)
                            </td>
                            <td>
                                @General.GetUserStatus(item.Status)
                            </td>
                           
                            
                                <td class="text-center">
                                  
                                    
                                        <span>
                                            <a href="@Url.Action("Index", new { Role = clsEncrypt.Encrypt(item.RoleID.ToString()) })" title='Edit'>
                                                <i class="fa fa-pencil-square-o fa-lg" aria-hidden="true"></i>
                                            </a>
                                        </span>
                                    
                                  
                                  
                                        <span>
                                            <a href="@Url.Action("Delete", new { Role = clsEncrypt.Encrypt(item.RoleID.ToString()) })" onclick="return ShowConfirmation(event,this,'You want to delete this role?')" title='Delete'>
                                                <i class="fa fa-trash-o fa-lg" aria-hidden="true"></i>
                                            </a>
                                        </span>
                                   
                                    @*<span>
                                        <a href="@Url.Action("", "LogsAudit", new { Column = "Roles" , Value = clsEncrypt.Encrypt(item.RoleID.ToString()) })" title='View Audit Logs' target="_blank">
                                            <i class="fa fa-info-circle fa-lg" aria-hidden="true"></i>
                                        </a>
                                    </span>*@
                                </td>
                          
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
}
