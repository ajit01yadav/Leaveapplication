            </div>
            <div class="panel-footer save-panel">
                
                
                    <div class="pull-right">
                        <a href="@Url.Action("Manage", "User")" class="@Validations.ButtonCss.btnCancelMD">
                            <i class="fa fa-times"></i> Cancel
                        </a>
                        <button type="submit" class="@Validations.ButtonCss.btnSaveLG">
                            <i class="fa fa-save"></i> Save
                        </button>
                    </div>
                
