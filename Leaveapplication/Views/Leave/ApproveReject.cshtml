<form>

        @using (Html.BeginForm("ApproveReject", "Leave", FormMethod.Post))
        {

        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Reason For Rejection</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <input class="modalTextInput form-control" placeholder="Text Here" id="rejectreason" />
                       

                    </div>
                    <div class="modal-footer">
                        <button type="submit" id="btnSubmit" class="saveEdit btn btn-primary">Save</button>
                       
                    </div>
                </div>
            </div>
        </div>
       
        <p class="recentNote"></p>

        <div class="row">
            <div class="col-xs-12 page-header">
                <div class="row">

                    <div class="col-sm-4">
                        <label>
                            Employee Name:
                        </label>
                        <div class="form-group">
                            @Html.TextBox("FirstName", "", new { @class = "form-control", @maxlength = "100" })
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <label>
                            Status:
                        </label>
                        <div class="form-group">
                            @Html.DropDownList("Status", new List<SelectListItem> {
                                      new SelectListItem { Text = "All", Value = "0" },
                                      new SelectListItem { Text = "Open", Value = "1" },
                                      new SelectListItem { Text = "Approved", Value = "2" },
                                      new SelectListItem { Text = "Rejected", Value = "3" }}, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <label></label>
                            <div class="form-group">
                                <input type="submit" class="btn btn-primary" value="Search" />
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        if (ViewBag.Message != "")
        {
                <div id="msgDisplay" class="@ViewBag.Class">
                    <button data-dismiss="alert" class="close" type="button">
                        <i class="ace-icon fa fa-times"></i>
                    </button>
                    <label id="lblMessage">@ViewBag.Message</label>
                </div>
        }


        <div class="row">
            <div class="col-xs-12">
                <table class="table table-striped table-bordered table-hover table-responsive" id="myTable">

                    <tr class="text-center">
                        <th class="text-center">Leaveid</th>
                        <th class="text-center">EmpCode</th>
                        <th class="text-center">Employee Name</th>
                        <th class="text-center">From Date</th>
                        <th class="text-center">To Date</th>
                        <th class="text-center">Leave Reason</th>
                        <th class="text-center">Leave Type</th>
                        <th class="text-center">Total Days</th>
                        <th class="text-center">Status</th>


                        <th class="text-center">Action</th>
                      
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr class="text-center">
                            <td>
                                @Html.DisplayFor(modelItem => item.leaveId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.updatedby)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FullName)
                                @*@Html.DisplayFor(modelItem => item.LastName)*@
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Fromdate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Todate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.leavereason)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.leavecount)
                            </td>

                            <td>
                                @General.GetStatus(item.Status)
                            </td>

                            <td class="text-center">
                                @if (item.IsApproved == true && item.IsRejected == false && item.ApprovalType != "approveflag")
                                {

                                    <span>
                                        <a href="@Url.Action("Approve", new { User = clsEncrypt.Encrypt(item.leaveId.ToString()) })"
                                           id="btnapprove" class="btn btn-success btn-sm disabled" title='Approve'>

                                            Approve
                                        </a>

                                    </span>
                                    <span>
                                        <a href="@Url.Action("UserDetails", new { User = clsEncrypt.Encrypt(item.leaveId.ToString()) })" data-toggle="modal" class="btn btn-success btn-sm"
                                           id="btnEdit" data-target="#exampleModal" data-id="@item.leaveId" title='Reject'>
                                            Reject
                                        </a>

                                    </span>
                                }
                                 @if (item.IsApproved == true && item.IsRejected == false && item.ApprovalType == "approveflag")
                                {

                                    <span>
                                        <a href="@Url.Action("Approve", new { User = clsEncrypt.Encrypt(item.leaveId.ToString()) })"
                                           id="btnapprove" class="btn btn-success btn-sm disabled" title='Approve'>

                                            Approve
                                        </a>

                                    </span>
                                    <span>
                                        <a href="@Url.Action("UserDetails", new { User = clsEncrypt.Encrypt(item.leaveId.ToString()) })" data-toggle="modal" class="btn btn-success btn-sm disabled"
                                           id="btnEdit" data-target="#exampleModal" data-id="@item.leaveId" title='Reject'>
                                            Reject
                                        </a>

                                    </span>
                                }
                                @if (item.IsRejected == true && item.IsApproved == false && item.ApprovalType == "rejectflag")
                                {

                                    <span>
                                        <a href="@Url.Action("Approve", new { User = clsEncrypt.Encrypt(item.leaveId.ToString()) })"
                                           id="btnapprove" class="btn btn-success btn-sm disabled" title='Approve'>

                                            Approve
                                        </a>

                                    </span>
                                    <span>
                                        <a href="@Url.Action("UserDetails", new { User = clsEncrypt.Encrypt(item.leaveId.ToString()) })" data-toggle="modal" class="btn btn-success btn-sm disabled"
                                           id="btnEdit" data-target="#exampleModal" data-id="@item.leaveId" title='Reject'>
                                            Reject
                                        </a>

                                    </span>
                                }
                              
                                @if (item.IsRejected == true && item.IsApproved == false && item.Status == 3 && item.ApprovalType != "rejectflag")
                                {

                                    <span>
                                        <a href="@Url.Action("UserDetails",new { User = clsEncrypt.Encrypt(item.leaveId.ToString()) })" data-toggle="modal" class="btn btn-success btn-sm disabled"
                                           id="btnEdit" data-target="#exampleModal" data-id="@item.leaveId" title='Reject'>
                                            Reject
                                        </a>

                                    </span>
                                    <span>
                                        <a href="@Url.Action("Approve", new { User = clsEncrypt.Encrypt(item.leaveId.ToString()) })"
                                           id="btnapprove" class="btn btn-success btn-sm" title='Approve'>

                                            Approve
                                        </a>

                                    </span>
                                }
                               @if (item.Status==1 && item.ApprovalType == "openstatus")
                              {

                           
                           <span>
                        <a href="@Url.Action("Approve", new { User = clsEncrypt.Encrypt(item.leaveId.ToString()) })"
                           id="btnapprove" data-id="@item.leaveId", class="btn btn-success btn-sm" title='Approve'>

                            Approve
                        </a>
                        </span>
                        <span>
                            <a href="@Url.Action("UserDetails",new { User = clsEncrypt.Encrypt(item.leaveId.ToString()) })" data-toggle="modal" class="btn btn-success btn-sm"
                               id="btnEdit" data-target="#exampleModal" data-id="@item.leaveId" title='Reject'>
                                Reject
                            </a>

                    </span>
                     }
                                @*@if (Convert.ToDateTime(item.Todate) < DateTime.Today)
                                {
                                    <span>
                                        <a href="@Url.Action("Approve", new { User = clsEncrypt.Encrypt(item.leaveId.ToString()) })"
                                           id="btnapprove" data-id="@item.leaveId" , class="btn btn-success btn-sm disabled" title='Approve'>

                                            Approve
                                        </a>
                                        </span>
                                        <span>
                                            <a href="@Url.Action("UserDetails",new { User = clsEncrypt.Encrypt(item.leaveId.ToString()) })" data-toggle="modal" class="btn btn-success btn-sm disabled"
                                               id="btnEdit" data-target="#exampleModal" data-id="@item.leaveId" title='Reject'>
                                                Reject
                                            </a>

                                        </span>

                                }*@
                                      


</td>

               </tr>
                    }
                    @Html.Partial("Paging")
                </table>
            </div>
        </div>

    }
</form>


